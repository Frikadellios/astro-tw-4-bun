---
import { fade } from 'astro:transitions'
import { getLangFromUrl, useTranslations } from '@/i18n/utils'
import { LANGUAGES_ARRAY } from '@/i18n/utils'
import Layout from '@/layouts/Layout.astro'
import HeroSectionGradientBackground from '@/components/react/hero-starter'
import FeaturesWithHeading from '@/components/react/features-with-icons'
import Pricing from '@/components/react/pricing'
import { BentoGrid } from '@/components/react/services-bento-greed'
import CentralAboutMe from '@/components/react/central-about-me'
import Newsletter from '@/components/react/newseller-section'
import NavigationSection from '@/components/react/navigation'


export const getStaticPaths = () => {
  return LANGUAGES_ARRAY.map((lang) => ({
    params: { lang }
  }))
}

export const prerender = true
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---


<Layout title={t('homepage-title')} description={t('homepage-description')} lang={lang} transition:animate={fade({ duration: "0.4s" })}>
    <NavigationSection client:load />
    <HeroSectionGradientBackground />
    <CentralAboutMe />
    <FeaturesWithHeading />
    <Pricing />
    <BentoGrid client:load />
    <Newsletter />
</Layout>
